ScreenManager:
	MainMenu:
	SongSelect:
	GameScreen:

<TimingIcon>
    size: 20,20
    canvas:
        Ellipse:
            pos:self.pos
            size:self.size

<MainMenu>:
	name: "main"
	BoxLayout:
		height:30
		spacing:10

		Label: 
			size_hint: (.7, 1)
			text: "Sight Reading Game"	
		GridLayout:
			cols: 1
			size_hint: (.3,1)
			Button:
				text: "Play Song"
				on_release: 
					app.root.current = "song"
					root.manager.transition.direction = "left"
                    root.manager.mode = "SongPlay"
			Button:
				text: "Practise Random Bars"
				on_release: 
                    app.root.current = "song"
                    root.manager.mode = "RandomPlay"
			

