<Player>:
    size: 1, 80
    pos: 20, self.center_y - 40
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<MusicGame>:
    player1: player_left
    
    Player:
        id: player_left
        x: self.parent.center_x
        center_y: root.center_y
    
        
        

